<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SauceDemo Test Suite" verbose="1" parallel="false">

	<test name="Login and Checkout Tests">
		<classes>
			<class name="com.pwj.saucedemo.tests.SauceDemoStandardUserLogin" />
			<class name="com.pwj.saucedemo.tests.SauceDemoInvalidLoginTest" />
			<class name="com.pwj.saucedemo.tests.AddToCartTest" />
			<class name="com.pwj.saucedemo.tests.LoginScenariosDifferentUsers">
				<methods>
					<include name="testStandardUserLogin" />
					<include name="testLockedOutUserLogin" />
					<include name="testProblemUserLogin" />
					<include name="testPerformanceGlitchUserLogin" />
					<include name="testInvalidUserLogin" />
				</methods>
			</class>
			<!-- Consolidated checkout test class -->
			<class name="com.pwj.saucedemo.tests.CheckoutFlowTest" />
		</classes>
	</test>

</suite>
